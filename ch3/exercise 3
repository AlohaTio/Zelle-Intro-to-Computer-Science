#Python Programming Third Edition
#Chapter 3, Exercise 
#	Program to compute the molecular weight of carbohydrates

def main():
# Print an introduction
	print("")
	print("This program computes the molecular weight of a carbohydrate based")
	print("on the number of carbon, hydrogen and oxygen atoms in the molecule.")
	print("")
	
# Prompt the user for input - number of hydrogen, carbon and oxygen atoms
	h = float(input("Enter the number of hydrogen atoms in the string: "))
	c = float(input("Enter the number of carbon atoms in the string: "))
	o = float(input("Enter the number of oxygen atoms in the string: "))	
	
# Compute the weight using the table
	weight = h * 1.00794 + c * 12.0107 + o * 15.9994

# Return the computation to the user
	print("The weight of your carbohydrate string is", weight, "grams/mole")
	
main()
