#Python Programming Third Edition
#Chapter 3, Exercise 1
#	A program to calculate the volume and surface of a sphere

import math

def main():
	print("This is a program to calculate the volume and surface area of a sphere ")
	print("when given the radius")
	r = float(input("Please input the radius of the sphere: "))
	volume = 4.0/3.0 * math.pi * r ** 3
	area = 4.0 * math.pi * r ** 2
	print("The volume of this sphere is: ", "%.2f" % round(volume, 2))
	print("The surface area of this sphere is: ", "%.2f" % round(area, 2))
main()	
